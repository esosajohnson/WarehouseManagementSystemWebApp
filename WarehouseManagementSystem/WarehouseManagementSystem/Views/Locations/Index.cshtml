@model IEnumerable<WarehouseManagementSystem.Models.Location>

@if (TempData ["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@{
    ViewData["Title"] = "Warehouse Locations";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-semibold">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Add Location
            </a>
        </div>
    </div>
</div>

<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <p class="text-muted">Manage the locations within your warehouse. You can add, edit, view, or delete locations as needed.</p>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        @if (!Model.Any())
        {
            <p class="text-muted">No locations have been added yet.</p>
        }
        else
        {
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 25%">Name</th>
                        <th style="width: 20%">Aisle</th>
                        <th style="width: 20%">Shelf</th>
                        <th style="width: 35%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model)
                    {
                        <tr>
                            <td>@entry.Name</td>
                            <td>@entry.Aisle</td>
                            <td>@entry.Shelf</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@entry.LocationId"
                                   class="btn btn-outline-secondary btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@entry.LocationId"
                                   class="btn btn-outline-info btn-sm me-2">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@entry.LocationId"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
