@model WarehouseManagementSystem.Models.Location
@{
    ViewData["Title"] = "Add Location";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 mx-auto" style="max-width: 800px;">

        <h2 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h2>

        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Aisle" class="form-label fw-semibold"></label>
                <input asp-for="Aisle" class="form-control" />
                <span asp-validation-for="Aisle" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Shelf" class="form-label fw-semibold"></label>
                <input asp-for="Shelf" class="form-control" />
                <span asp-validation-for="Shelf" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Create
            </button>
            <button type="reset" class="btn btn-info ms-2 px-4">
                <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
