@model WarehouseManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>
            <dt class="col-sm-4 fw-semibold">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>
            <dt class="col-sm-4 fw-semibold">Position</dt>
            <dd class="col-sm-8">@Model.Position</dd>
            <dt class="col-sm-4 fw-semibold">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4 fw-semibold">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>
            <dt class="col-sm-4 fw-semibold">Hired Date</dt>
            <dd class="col-sm-8">
                @(Model.HireDate.HasValue
                                ? Model.HireDate.Value.ToString("MMMM dd, yyyy")
                                : "Not available")
            </dd>
            <dt class="col-sm-4 fw-bold">Still Active?</dt>
            <dd class="col-sm-8">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success" style="font-size: 1rem;">Yes</span>
                }
                else
                {
                    <span class="badge bg-danger" style="font-size: 1rem;">No</span>
                }
            </dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">
                <i class="bi bi-pencil-square me-1"></i>Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>
