@model WarehouseManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
        <h5 class="text-danger mb-4">Are you sure you want to delete this employee?</h5>
        <dl class="row">
            <dt class="col-sm-4 fw-semibold">First Name</dt>
            <dd class="col-sm-8">@Model.FirstName</dd>
            <dt class="col-sm-4 fw-semibold">Last Name</dt>
            <dd class="col-sm-8">@Model.LastName</dd>
            <dt class="col-sm-4 fw-semibold">Position</dt>
            <dd class="col-sm-8">@Model.Position</dd>
            <dt class="col-sm-4 fw-semibold">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4 fw-semibold">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="EmployeeId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left-circle me-1"></i>Back to List
            </a>
        </form>
    </div>
</div>
