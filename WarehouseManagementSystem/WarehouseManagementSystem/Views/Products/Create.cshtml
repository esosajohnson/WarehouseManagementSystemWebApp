@model WarehouseManagementSystem.Models.Product

@{
    ViewData["Title"] = "Add a new Product";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 mx-auto" style="max-width: 800px;">
        
        <h2 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h2>

        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Sku" class="form-label fw-semibold"></label>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label fw-semibold"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="control-label fw-semibold">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">Please select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SupplierId" class="control-label fw-semibold">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId">
                    <option value="">Please select a supplier</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="LocationId" class="control-label fw-semibold">Location</label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId">
                    <option value="">Please select a location</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Create
            </button>
            <button type="reset" class="btn btn-info ms-2 px-4">
                <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
