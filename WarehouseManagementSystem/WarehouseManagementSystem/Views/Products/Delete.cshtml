@model WarehouseManagementSystem.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
        <h5 class="mb-4">Are you sure you want to delete this location?</h5>
        <dl class="row mb-4">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">SKU</dt>
            <dd class="col-sm-9">@Model.Sku</dd>
            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location?.Name</dd>
            <dt class="col-sm-3">Supplier</dt>
            <dd class="col-sm-9">@Model.Supplier?.Name</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductId" />
            <button type="submit" class="btn btn-danger px-4">Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">Cancel</a>
        </form>
    </div>
</div>