@model WarehouseManagementSystem.Models.Product  

@{  
    ViewData["Title"] = "Edit Product"; 
}  

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 mx-auto" style="max-width: 800px;">
        <h2 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Sku" class="form-label fw-semibold"></label>
                <input asp-for="Sku" class="form-control" />
                <span asp-validation-for="Sku" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label fw-semibold"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="control-label fw-semibold">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">Please select a category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SupplierId" class="control-label fw-semibold">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId">
                    <option value="">Please select a supplier</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="LocationId" class="control-label fw-semibold">Location</label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId">
                    <option value="">Please select a location</option>
                </select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary px-4">Save</button>
            <button type="reset" class="btn btn-outline-secondary ms-2 px-4">Reset</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">Back to List</a>
        </form>
    </div>
</div>  

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}
