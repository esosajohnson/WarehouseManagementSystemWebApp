@model IEnumerable<WarehouseManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Manage Products";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6" style="margin-left: -13px;">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary mt-4 ms-5">Add New Product</a>
        </div>
    </div>
</div>


<div class="container mb-4">
    <div class="row">
        <div class="col-12" style="margin-left: -13px;">
                <p>Manage your products below. You can add, edit, view details, or delete products.</p>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Name</th>
                <th>Sku</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Location</th>
                <th>Supplier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Name</td>
                    <td>@entry.Sku</td>
                    <td>@entry.Quantity</td>
                    <td>@entry.Category?.Name</td>
                    <td>@entry.Location?.Name</td>
                    <td>@entry.Supplier?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@entry.ProductId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@entry.ProductId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@entry.ProductId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
