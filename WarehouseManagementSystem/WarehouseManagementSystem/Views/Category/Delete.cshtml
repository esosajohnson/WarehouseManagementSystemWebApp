@model WarehouseManagementSystem.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
        <h5 class="text-danger mb-3">Are you sure you want to delete this category?</h5>
        <dl class="row">
            <dt class="col-sm-3">Category Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash me-1"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </form>
    </div>
</div>
