@model WarehouseManagementSystem.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 mx-auto" style="max-width: 800px;">
        
        <h2 class="mb-4 text-primary fw-semibold">@ViewData["Title"]</h2>

        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter a category name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter a description for the category"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Create
            </button>
            <button type="reset" class="btn btn-info ms-2 px-4">
                <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </form>
    </div>
</div>



