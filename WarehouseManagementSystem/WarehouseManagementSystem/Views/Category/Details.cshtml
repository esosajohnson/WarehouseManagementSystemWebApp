@model WarehouseManagementSystem.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container py-5">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
        <dl class="row">
            <dt class="col-sm-3">Category Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-primary px-4 me-2">
                <i class="bi bi-pencil-square me-1"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>