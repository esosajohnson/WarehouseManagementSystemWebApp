@model IEnumerable<WarehouseManagementSystem.Models.Category>

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">
		@TempData["ErrorMessage"]
	</div>
}

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary fw-semibold">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary px-4">
				<i class="bi bi-plus-circle me-1"></i> Create New Category
			</a>
		</div>
	</div>
</div>

<div class="container mb-2">
	<div class="row">
		<div class="col-12">
			<p class="text-muted">Here you can manage your categories. You can create, edit, view details, or delete categories.</p>
		</div>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
	<div class="card-body p-4">
		@if (!Model.Any())
		{
            <p class="text-muted">No categories available. Click "Create New Category" to add one.</p>
		}
		else
		{
			<table class="table table-hover align-middle">
				<thead class="table-light">
					<tr>
						<th>Category</th>
						<th>Description</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var entry in Model)
					{
						<tr>
							<td>@entry.Name</td>
							<td>@entry.Description</td>
							<td>
								<a asp-action="Edit" asp-route-id="@entry.CategoryId"
								   class="btn btn-outline-secondary btn-sm me-2">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-action="Details" asp-route-id="@entry.CategoryId"
								   class="btn btn-outline-info btn-sm me-2">
									<i class="bi bi-eye"></i> Details
								</a>
								<a asp-action="Delete" asp-route-id="@entry.CategoryId"
								   class="btn btn-outline-danger btn-sm">
									<i class="bi bi-trash"></i> Delete
								</a>
							</td>

						</tr>
					}
				</tbody>
			</table>
		}
	</div>
</div>