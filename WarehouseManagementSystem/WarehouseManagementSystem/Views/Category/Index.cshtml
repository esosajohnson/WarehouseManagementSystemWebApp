@model IEnumerable<WarehouseManagementSystem.Models.Category>

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger">
		@TempData["ErrorMessage"]
	</div>
}

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6" style="margin-left: -13px;">
			<h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary mt-4">
				Create New Category
			</a>
		</div>
	</div>
</div>

<div class="container mb-4">
	<div class="row">
		<div class="col-12" style="margin-left: -13px;">
			<p>Here you can manage your categories. You can create, edit, view details, or delete categories.</p>
		</div>
    </div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead class="table-primary">
			<tr>
				<th>Category</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var entry in Model)
			{
				<tr>
					<td>@entry.Name</td>
					<td>@entry.Description</td>
					<td>
						<a asp-action="Edit" asp-route-id="@entry.CategoryId" class="btn btn-warning btn-sm">Edit</a>
						<a asp-action="Details" asp-route-id="@entry.CategoryId" class="btn btn-info btn-sm">Details</a>
						<a asp-action="Delete" asp-route-id="@entry.CategoryId" class="btn btn-danger btn-sm">Delete</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>