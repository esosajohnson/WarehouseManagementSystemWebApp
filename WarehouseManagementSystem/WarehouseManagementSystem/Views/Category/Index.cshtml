@model IEnumerable<WarehouseManagementSystem.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h1>Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-success mb-2">
				Create New Category
			</a>
		</div>
	</div>
</div>


<div class="table-responsive">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Category</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var entry in Model)
			{
				<tr>
					<td>@entry.Name</td>
					<td>@entry.Description</td>
					<td>
						<a asp-action="Edit" asp-route-id="@entry.CategoryId" class="btn btn-primary btn-sm">
							Edit
						</a> |
						<a asp-action="Details" asp-route-id="@entry.CategoryId" class="btn btn-secondary btn-sm">
							Edit
						</a> |
						<a asp-controller="DiaryEntries" asp-action="Delete" asp-route-id="@entry.CategoryId" class="btn btn-danger btn-sm">
							Delete
						</a>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>