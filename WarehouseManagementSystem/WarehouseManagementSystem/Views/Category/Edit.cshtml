@model WarehouseManagementSystem.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 rounded-4 mx-auto" style="max-width: 800px;">
        <h2 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save me-1"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}