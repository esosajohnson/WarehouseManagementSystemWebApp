@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h1 class="text-primary fw-bold mb-3">
        <i class="bi bi-grid-fill me-2"></i> Warehouse Management Dashboard
    </h1>
    <p class="text-muted mb-4">
        Overview of all warehouse operations — inbound, outbound, stock, and logistics.
    </p>

    <div class="row g-4 justify-content-center">

        <!-- PRODUCTS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam fs-1 text-primary"></i>
                    <h5 class="fw-semibold mt-3">Total Products</h5>
                    <h2 class="fw-bold">@ViewData["TotalProducts"]</h2>
                    <a class="btn btn-primary mt-2 w-100" href="/Products">Manage Products</a>
                </div>
            </div>
        </div>

        <!-- SUPPLIERS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill fs-1 text-success"></i>
                    <h5 class="fw-semibold mt-3">Total Suppliers</h5>
                    <h2 class="fw-bold">@ViewData["TotalSuppliers"]</h2>
                    <a class="btn btn-success mt-2 w-100" href="/Suppliers">View Suppliers</a>
                </div>
            </div>
        </div>

        <!-- CATEGORIES -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-tags-fill fs-1 text-warning"></i>
                    <h5 class="fw-semibold mt-3">Total Categories</h5>
                    <h2 class="fw-bold">@ViewData["TotalCategories"]</h2>
                    <a class="btn btn-warning mt-2 w-100" href="/Category">View Categories</a>
                </div>
            </div>
        </div>

        <!-- EMPLOYEES -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill fs-1 text-info"></i>
                    <h5 class="fw-semibold mt-3">Total Employees</h5>
                    <h2 class="fw-bold">@ViewData["TotalEmployees"]</h2>
                    <a class="btn btn-info mt-2 w-100" href="/Employees">View Employees</a>
                </div>
            </div>
        </div>

        <!-- INVENTORY TRANSACTIONS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-left-right fs-1 text-danger"></i>
                    <h5 class="fw-semibold mt-3">Inventory Movements</h5>
                    <h2 class="fw-bold">@ViewData["InventoryTransactions"]</h2>
                    <a class="btn btn-danger mt-2 w-100" href="/InventoryTransactions">View Transactions</a>
                </div>
            </div>
        </div>

        <!-- LOCATIONS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-geo-alt-fill fs-1 text-secondary"></i>
                    <h5 class="fw-semibold mt-3">Storage Locations</h5>
                    <h2 class="fw-bold">@ViewData["TotalLocations"]</h2>
                    <a class="btn btn-secondary mt-2 w-100" href="/Locations">Manage Locations</a>
                </div>
            </div>
        </div>

        <!-- PURCHASE ORDERS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-cart-check fs-1 text-primary"></i>
                    <h5 class="fw-semibold mt-3">Purchase Orders</h5>
                    <h2 class="fw-bold">@ViewData["TotalPurchaseOrders"]</h2>
                    <a class="btn btn-primary mt-2 w-100" href="/PurchaseOrders">View Orders</a>
                </div>
            </div>
        </div>

        <!-- GOODS RECEIPTS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-journal-check fs-1 text-success"></i>
                    <h5 class="fw-semibold mt-3">Goods Receipts</h5>
                    <h2 class="fw-bold">@ViewData["TotalGoodsReceipts"]</h2>
                    <a class="btn btn-success mt-2 w-100" href="/GoodsReceipts">View Receipts</a>
                </div>
            </div>
        </div>

        <!-- STOCK LEVELS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-line fs-1 text-warning"></i>
                    <h5 class="fw-semibold mt-3">Stock Levels</h5>
                    <h2 class="fw-bold">@ViewData["TotalStockLevels"]</h2>
                    <a class="btn btn-warning mt-2 w-100" href="/StockLevels">View Stock</a>
                </div>
            </div>
        </div>

        <!-- OUTBOUND: PICKING & SHIPMENT -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-truck fs-1 text-info"></i>
                    <h5 class="fw-semibold mt-3">Outbound Operations</h5>
                    <h2 class="fw-bold">@ViewData["TotalOutbound"]</h2>
                    <a class="btn btn-info mt-2 w-100" href="/Shipments">View Shipments</a>
                </div>
            </div>
        </div>

        <!-- RETURNS -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-counterclockwise fs-1 text-danger"></i>
                    <h5 class="fw-semibold mt-3">Return Transactions</h5>
                    <h2 class="fw-bold">@ViewData["TotalReturns"]</h2>
                    <a class="btn btn-danger mt-2 w-100" href="/ReturnTransactions">View Returns</a>
                </div>
            </div>
        </div>

    </div>

</div>
