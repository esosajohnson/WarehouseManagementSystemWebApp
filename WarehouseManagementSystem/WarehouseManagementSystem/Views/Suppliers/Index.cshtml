@model IEnumerable<WarehouseManagementSystem.Models.Supplier>

@{
    ViewData["Title"] = "Manage Suppliers";
}

@if (TempData["ErrorMessage"] != null) {
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-semibold">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Create New Supplier
            </a>
        </div>
    </div>
</div>

<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <p>Here you can manage your suppliers. You can create, edit, or delete suppliers as needed.</p>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No suppliers found. Click "Create New Supplier" to add one.
            </div>
        }
        else
        {
            <table class="table align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td>@supplier.Name</td>
                            <td>@supplier.Email</td>
                            <td>@supplier.Phone</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@supplier.SupplierId"
                                   class="btn btn-outline-secondary btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@supplier.SupplierId"
                                   class="btn btn-outline-info btn-sm me-2">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@supplier.SupplierId"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                            </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>