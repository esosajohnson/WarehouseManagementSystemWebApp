@model IEnumerable<WarehouseManagementSystem.Models.Supplier>

@{
    ViewData["Title"] = "Manage Suppliers";
}

@if (TempData["ErrorMessage"] != null) {
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6" style="margin-left: -13px;">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary mt-4">Add New Supplier</a>
        </div>
    </div>
</div>

<div class="container mb-4">
    <div class="row">
        <div class="col-12" style="margin-left: -13px">
            <p>Here you can manage your suppliers. You can add, edit, or delete suppliers as needed.</p>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>Supplier Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model) {
                <tr>
                    <td>@supplier.Name</td>
                    <td>@supplier.Email</td>
                    <td>@supplier.Phone</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>