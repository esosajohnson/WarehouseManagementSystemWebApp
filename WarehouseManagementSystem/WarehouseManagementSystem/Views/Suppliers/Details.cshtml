@model WarehouseManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Supplier Details";
}

<div class="container py-5">
    <div class="card shadow-sm p-4 border-0 mx-auto" style="max-width: 600px;">
        <h2 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h2>
        
        <dl class="row">
            <dt class="col-sm-4">Supplier Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>
        </dl>
        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.SupplierId" class="btn btn-primary px-4">
                <i class="bi bi-pencil-square me-1"></i> Edit Supplier
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
        </div>
    </div>
</div>