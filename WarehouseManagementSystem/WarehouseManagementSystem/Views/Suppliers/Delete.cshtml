@model WarehouseManagementSystem.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width: 600px;">
        <h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
        <h5 class="text-danger mb-3">Are you sure you want to delete this supplier?</h5>
        <dl class="row">
            <dt class="col-sm-4">Supplier Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
            <dt class="col-sm-4">Phone</dt>
            <dd class="col-sm-8">@Model.Phone</dd>
        </dl>
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="SupplierId" />
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash me-1"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2 px-4">
                <i class="bi bi-arrow-left-circle me-1"></i> Cancel
            </a>
        </form>
    </div>
</div>