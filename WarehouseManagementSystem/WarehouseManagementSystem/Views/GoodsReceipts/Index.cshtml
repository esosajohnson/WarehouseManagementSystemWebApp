@model IEnumerable<WarehouseManagementSystem.Models.GoodsReceipt>

@{
    ViewData["Title"] = "Goods Receipts";
}

@if (TempData ["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary fw-semibold">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary px-4">
                <i class="bi bi-plus-circle me-1"></i> Create New Goods Receipt
            </a>
        </div>
    </div>
</div>

<div class="container mb-2">
    <div class="row">
        <div class="col-12">
            <p>
                Please ensure that all goods receipts are accurately recorded to maintain inventory integrity and facilitate smooth operations.
            </p>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4">

        @if (!Model.Any())
        {
            <div class="alert alert-info mb-0" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                No goods receipts found. Click "Create New Goods Receipt" to add your first entry.
            </div>
        }
        else
        {
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Receipt ID</th>
                        <th>Purchase Order</th>
                        <th>Supplier</th>
                        <th>Employee</th>
                        <th>Receipt Date</th>
                        <th>Reference Number</th>
                        <th>Status</th>
                        <th>Notes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model)
                    {
                        <tr>
                            <td>@entry.GoodsReceiptId</td>
                            <td>@entry.PurchaseOrderId</td>
                            <td>@entry.SupplierId</td>
                            <td>@entry.EmployeeId</td>
                            <td>@entry.ReceiptDate.ToShortDateString()</td>
                            <td>@entry.ReferenceNumber</td>
                            <td>@entry.Status</td>
                            <td>@entry.Notes</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@entry.GoodsReceiptId"
                                   class="btn btn-outline-secondary btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@entry.GoodsReceiptId"
                                   class="btn btn-outline-info btn-sm me-2">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@entry.GoodsReceiptId"
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                        <form asp-action="Receive" asp-route-id="@entry.GoodsReceiptId" method="post" style="display:inline">
                            <button class="btn btn-success btn-sm" @(entry.Status == "Received" ? "disabled" : "")>
                                <i class="bi bi-check-circle-fill me-1"></i> Mark as Received
                            </button>
                        </form>
                    }
                </tbody>
            </table>
        }
    </div>
</div>