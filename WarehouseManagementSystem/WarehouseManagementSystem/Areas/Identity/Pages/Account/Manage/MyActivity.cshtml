@page
@model WarehouseManagementSystem.Areas.Identity.Pages.Account.Manage.MyActivityModel
@{
    ViewData["Title"] = "My Activity";
}

<h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>

<div class="card shadow-sm border-0 rounded-4 p-4">

    @if (!Model.Activities.Any())
    {
        <p class="text-muted">No activity has been recorded yet.</p>
    }
    else
    {
        <div class="timeline">
            @foreach (var a in Model.Activities)
            {
                <div class="timeline-item mb-4">
                    <div class="d-flex align-items-start">
                        <div>
                            <i class="bi @a.Icon fs-3 text-primary me-3"></i>
                        </div>
                        <div>
                            <h6 class="fw-semibold mb-1">@a.Action</h6>
                            <small class="text-muted">@a.Timestamp.ToString("f")</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .timeline {
        border-left: 3px solid #0d6efd;
        padding-left: 20px;
    }
    .timeline-item {
        position: relative;
    }
    .timeline-item:before {
        content: "";
        width: 12px;
        height: 12px;
        background: #0d6efd;
        border-radius: 50%;
        position: absolute;
        left: -27px;
        top: 5px;
    }
</style>
