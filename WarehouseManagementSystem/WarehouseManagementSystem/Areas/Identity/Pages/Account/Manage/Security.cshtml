@page
@model WarehouseManagementSystem.Areas.Identity.Pages.Account.Manage.SecurityModel
@{
    ViewData["Title"] = "Security Settings";
    ViewData["ActivePage"] = ManageNavPages.Security;
}

<h3 class="text-primary fw-semibold text-center mb-4">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card shadow-sm border-0 rounded-4 mx-auto mb-4" style="max-width: 650px;">
    <div class="card-body p-4">
        <div class="d-flex align-items-center mb-3">
            <div class="bg-light rounded-circle p-3 me-3">
                <i class="bi bi-shield-lock text-primary fs-4"></i>
            </div>
            <div>
                <h5 class="card-title mb-1 text-primary">Two-Factor Authentication</h5>
                <p class="mb-0 text-muted small">
                    Add an extra layer of security to protect your account from unauthorized access.
                </p>
            </div>
        </div>

        <hr />

        @if (Model.Is2faEnabled)
        {
            <div class="d-flex justify-content-between align-items-center">
                <span><strong>Status:</strong> <span class="text-success">Enabled ✅</span></span>
                <form method="post" asp-page-handler="Disable2fa">
                    <button type="submit" class="btn btn-outline-danger rounded-pill px-3">
                        <i class="bi bi-x-circle me-1"></i> Disable 2FA
                    </button>
                </form>
            </div>
        }
        else
        {
            <div class="d-flex justify-content-between align-items-center">
                <span><strong>Status:</strong> <span class="text-danger">Disabled ❌</span></span>
                <a asp-page="./EnableAuthenticator" class="btn btn-primary rounded-pill px-3">
                    <i class="bi bi-shield-plus me-1"></i> Enable 2FA
                </a>
            </div>
        }
    </div>
</div>

<div class="card shadow-sm border-0 rounded-4 mx-auto mb-4" style="max-width: 650px;">
    <div class="card-body p-4">
        <div class="d-flex align-items-center mb-3">
            <div class="bg-light rounded-circle p-3 me-3">
                <i class="bi bi-person-lines-fill text-primary fs-4"></i>
            </div>
            <div>
                <h5 class="card-title mb-1 text-primary">Personal Data</h5>
                <p class="mb-0 text-muted small">
                    You can download your personal data for review or backup purposes.
                </p>
            </div>
        </div>

        <hr />

        <form method="post" asp-page="./DownloadPersonalData">
            <button type="submit" class="btn btn-outline-primary rounded-pill px-3">
                <i class="bi bi-download me-1"></i> Download Data
            </button>
        </form>
    </div>
</div>
