@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <div class="mb-2 text-primary">
                    <i class="bi bi-lock-fill" style="font-size: 3rem;"></i>
                </div>
                <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
                <p class="text-muted mb-0">Keep your account secure by updating your password regularly.</p>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="change-password-form" method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.OldPassword" class="form-label fw-semibold text-primary"> Current Password</label>
                    <input asp-for="Input.OldPassword" class="form-control />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.NewPassword" class="form-label fw-semibold text-primary"> New Password</label>
                    <input asp-for="Input.NewPassword" class="form-control />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold text-primary"> Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button id="change-password-button" type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                        <i class="bi bi-arrow-repeat me-2"></i> Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
