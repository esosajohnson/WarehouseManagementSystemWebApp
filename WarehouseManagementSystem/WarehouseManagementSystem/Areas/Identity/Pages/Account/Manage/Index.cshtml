@page
@model IndexModel
@{
    ViewData["Title"] = "Account Overview";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <div class="mb-2 text-primary">
                    <i class="bi bi-person-circle" style="font-size: 3rem;"></i>
                </div>
                <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
                <p class="text-muted mb-0">View a summary of your personal account details.</p>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <div class="mt-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-person me-3 text-secondary" style="font-size: 1.4rem;"></i>
                    <div>
                        <h6 class="fw-semibold mb-0 text-dark">Full Name</h6>
                        <p class="text-muted mb-0">@Model.FullName</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-envelope me-3 text-secondary" style="font-size: 1.4rem;"></i>
                    <div>
                        <h6 class="fw-semibold mb-0 text-dark">Email</h6>
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-telephone me-3 text-secondary" style="font-size: 1.4rem;"></i>
                    <div>
                        <h6 class="fw-semibold mb-0 text-dark">Phone Number</h6>
                        <p class="text-muted mb-0">@Model.PhoneNumber</p>
                    </div>
                </div>

                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-shield-lock me-3 text-secondary" style="font-size: 1.4rem;"></i>
                    <div>
                        <h6 class="fw-semibold mb-0 text-dark">Role</h6>
                        <p class="text-muted mb-0">@Model.Role</p>
                    </div>
                </div>
            </div>

            <hr class="my-4" />

            <div class="text-center">
                <a asp-page="./EditProfile" class="btn btn-primary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-pencil-square me-2"></i> Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>
