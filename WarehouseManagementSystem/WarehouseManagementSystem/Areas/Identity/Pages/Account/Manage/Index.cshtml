@page
@model IndexModel
@{
    ViewData["Title"] = "Account Overview";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="text-primary fw-semibold mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="card shadow-sm border-0 mb-4" style="max-width: 600px;">
    <div class="card-body">
        <h5 class="card-title mb-3 text-secondary">Profile Information</h5>

        <div class="mb-2"><strong>Full Name:</strong> @Model.FullName</div>
        <div class="mb-2"><strong>Email:</strong> @Model.Email</div>
        <div class="mb-2"><strong>Phone:</strong> @Model.PhoneNumber</div>
        <div class="mb-2"><strong>Role:</strong> @Model.Role</div>

        <hr />

        <div class="text-end">
            <a asp-page="./EditProfile" class="btn btn-primary px-4">Edit Profile</a>
        </div>
    </div>
</div>
