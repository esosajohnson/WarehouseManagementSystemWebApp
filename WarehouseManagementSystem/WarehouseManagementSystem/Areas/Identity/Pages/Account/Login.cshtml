@page
@model LoginModel

@{
    Layout = "_AuthLayout";
}

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-lg border-0 rounded-3" style="width: 450px;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <img src="~/Images/logo 2.jpg" alt="Logo" class="img-fluid mb-3" width="350" />
                <h4 class="fw-bold">Log in</h4>
                <h1 class="h6 text-muted">Please enter your credentials to log in.</h1>
            </div>

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="mb-3">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        Don't have an account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        overflow: hidden;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
